{
  "name": "cerosai",
  "version": "1.0.0",
  "description": "Um bot avançado para WhatsApp que integra com modelos de IA local, oferecendo conversas inteligentes com sistema robusto de memória, backup automático e rate limiting.",
  "type": "module",
  "main": "src/bot.js",
  "scripts": {
    "start": "node ./src/bot.js",
    "dev": "node --watch ./src/bot.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "health": "node ./scripts/health.js",
    "backup": "node ./scripts/backup.js",
    "cleanup": "node ./scripts/cleanup.js",
    "analyze-errors": "node ./scripts/analyze-errors.js",
    "optimize": "node ./scripts/optimize.js",
    "setup": "node ./scripts/setup.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop cerosai-bot",
    "pm2:restart": "pm2 restart cerosai-bot --update-env",
    "pm2:reload": "pm2 reload cerosai-bot --update-env",
    "pm2:delete": "pm2 delete cerosai-bot",
    "pm2:logs": "pm2 logs cerosai-bot",
    "pm2:monit": "pm2 monit",
    "start-bot": "start-bot.bat",
    "stop-bot": "stop-system.bat"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "pino": "^9.10.0",
    "pino-pretty": "^13.1.1",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.1"
  }
}
